{
  "schema": {
    "title": "Basic Form Box",
    "description": "Show basic settings for form box",
    "type": "object",
    "properties": {
      "formbox": {
        "type": "object",
        "title": "Settings",
        "properties": {
          "debugMode": {
            "type": "boolean",
            "title": "Set Debug Mode",
            "default": false
          },
          "readonly": {
            "type": "boolean",
            "title": "Set Read Only",
            "default": false
          },
          "loading": {
            "type": "boolean",
            "title": "Set Loading",
            "default": false
          }
        }
      }
    }
  },
  "uiSchema": {
    "formbox": {
      "debugMode": {
        "ui:help": "This will set the debugMode flag on FormBox",
        "ui:widget": "radio"
      },
      "readonly": {
        "ui:help": "This will set the readonly flag on FormBox",
        "ui:widget": "radio"
      },
      "loading": {
        "ui:help": "This will set the loading flag on FormBox",
        "ui:widget": "radio"
      }
    }
  }
}
