{
  "schema": {
    "title": "Basic Text Box",
    "description": "A text input",
    "type": "object",
    "properties": {
      "textbox": {
        "type": "object",
        "title": "Settings",
        "properties": {
          "multiline": {
            "type": "boolean",
            "title": "Multiline",
            "default": false
          },
          "dontAutoTrim": {
            "type": "boolean",
            "title": "Don't Auto Trim",
            "default": false
          }
        }
      },
      "formbox": {
        "type": "object",
        "title": "FormBox Settings",
        "properties": {
          "debugMode": {
            "type": "boolean",
            "title": "Set Debug Mode",
            "default": false
          },
          "readonly": {
            "type": "boolean",
            "title": "Set Read Only",
            "default": false
          }
        }
      }
    }
  },
  "uiSchema": {
    "formbox": {
      "debugMode": {
        "ui:help": "This will set the debugMode flag on FormBox",
        "ui:widget": "radio"
      },
      "readonly": {
        "ui:help": "This will set the readonly flag on FormBox",
        "ui:widget": "radio"
      }
    },
    "textbox": {
      "multiline": {
        "ui:help": "This will set the multiline flag on TextBox",
        "ui:widget": "radio"
      },
      "dontAutoTrim": {
        "ui:help": "This will set the dontAutoTrim flag on TextBox.  Defaults to false so it will always autotrim",
        "ui:widget": "radio"
      }
    }
  }
}
